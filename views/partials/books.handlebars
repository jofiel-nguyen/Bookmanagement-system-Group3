<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Trackr</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="stylesheet" type="text/css" href="style.css"> 
</head>
<body>
    <div class="container">
        {{!-- <div id="title" class="text-center mt-5">Book Finder</div> --}}
        <div class="row">
            <div id="input" class="input-group d-flex justify-content-center">
                <form id="search-form" action="#" method="GET">
                    <input id="search-box" type="text" class="form-control" placeholder="Search Books">
                    <button id="search" class="btn btn-primary" type="submit">Search</button>
                </form>
            </div>
            {{!-- <div id="input" class="input-group mx-auto col-lg-6 col-md-8 col-sm-12">
                <input id="search-box" type="text" class="form-control" placeholder="Search Books">
                <button id="search" class="btn btn-primary">Search</button>
            </div> --}}
        </div>
        <div class="book-list">
            {{!-- <h2 class="text-center">Search Results</h2>  --}}
            <div id="list-output" class="row">
                {{!-- <div class="row"> --}}
                    {{#each books}}
                    <div class="col lg-6">
                        <div class="card" style="">
                            <div class="row no-gutters">
                                <div class="col-md-4">
                                    <img src="{{this.bookImg}}" class="card-img" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">{{this.title}}</h5>
                                        <p class="card-text">Author: {{this.author}}</p>
                                        <p class="card-text">Publisher: {{this.publisher}}</p>
                                        {{#if this.rating}}
                                            <p class="card-text">Rating: {{this.rating}}</p>
                                        {{else}}
                                            <p class="card-text">No rating available</p>
                                        {{/if}}
                                        {{#if this.reviews}}
                                            <p class="card-text">Reviews: {{this.reviews}}</p>
                                        {{else}}
                                            <p class="card-text">No reviews available</p>
                                        {{/if}}
                                        <a target="_blank" href="{{this.bookLink}}" class="btn btn-secondary">Read Book</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                     {{#if @indexIsEven}}
        </div><div class="row">
        {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="/js/testapp.js"></script> 
</body>
</html>
